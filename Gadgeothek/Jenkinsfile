pipeline {
    agent {
        node {
            label 'jenkins-slave7.yvu.ch'
        }
    }
    stages {
        stage('Build') {
            steps {
                sh 'echo Build'
                sh '(cd Gadgeothek; ./gradlew build)'
            }
        }
        stage('Unit Tests') {
            steps {
                sh 'echo Unit Tests'
                sh '(cd Gadgeothek; ./gradlew test)'
            }
            post {
                always {
                    junit 'Gadgeothek/app/build/test-results/**/*.xml'
                }
            }
        }
        stage('End2End Tests') {
            steps {
                sh 'echo End2End Tests'
                sh '(cd Gadgeothek; ./gradlew connectedAndroidTest)'
            }
        }
        stage('Publish') {
            steps {
                sh 'echo Publish'
            }
        }
    }
}